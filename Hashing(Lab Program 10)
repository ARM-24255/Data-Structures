#include<stdio.h>
int key[20],n,m;
int *ht,index,count=0;

void insert(int key){
    index=key%m;
    while(ht[index]!=-1){
        index=(index+1)%m;
    }
    ht[index]=key;
    count++;
}
void display(){
    int i;
    if(count==0){
        printf("The hashtable is empty\n");
        return;
    }
    printf("\nThe elements of hashtable are:");
    for(i=0;i<m;i++){
        printf("\nT[%d]->%d",i,ht[i]);
    }
}

void main(){
    int i;
    printf("Enter the number of employees\n");
    scanf("%d",&n);
    printf("\nEnter the number of memory locations:");
    scanf("%d",&m);
    ht=(int *)malloc(m*sizeof(int));
    for(i=0;i<m;i++){
        ht[i]=-1;
    }
    printf("\nEnter the four digit key for the employee:");
    for(i=0;i<n;i++){
        scanf("%d",&key[i]);
    }
    for(i=0;i<n;i++){
        if(count==m){
            printf("The hashtable is full\n");
            break;
        }
        insert(key[i]);
    }
    display();
}
