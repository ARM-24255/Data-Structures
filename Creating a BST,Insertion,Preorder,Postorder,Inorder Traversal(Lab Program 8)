#include<stdio.h>
#include<stdlib.h>

struct node{
    int data;
    struct node *left;
    struct node *right;
};

struct node *create(int value){
    struct node *temp;
    temp=(struct node*)malloc(sizeof(struct node));
    if(temp==NULL){
        printf("Memory allocation failed\n");
        exit(0);
    }
    temp->data=value;
    temp->left=NULL;
    temp->right=NULL;
    return temp;
};

struct node *insert(struct node *root,int value){
    if(root==NULL){
        return create(value);
    }
    if(value<root->data){
        root->left=insert(root->left,value);
    }
    else if(value>root->data){
        root->right=insert(root->right,value);
    }
    return root;
};

void inorder(struct node *root){
    if(root!=NULL){
        inorder(root->left);
        printf("%d",root->data);
        inorder(root->right);
    }
}

void preorder(struct node *root){
    if(root!=NULL){
        printf("%d",root->data);
        preorder(root->left);
        preorder(root->right);
    }
}

void postorder(struct node *root){
    if(root!=NULL){
        postorder(root->left);
        postorder(root->right);
        printf("%d",root->data);
    }
}

void display(struct node *root){
    printf("Displaying using inorder traversal:\n");
    inorder(root);
    printf("\n");
}
void main(){
    struct node *root=NULL;
    int choice,val;
    do{
        printf("\n 1.Insert\n 2.Inorder\n 3.Preorder\n 4.Postorder\n 5.Display\n 6.Exit");
        printf("\nEnter your choice:");
        scanf("%d",&choice);
        switch(choice){
            case 1:printf("\nEnter value to insert:");
            scanf("%d",&val);
            root=insert(root,val);
            break;
            case 2:printf("\nInorder traversal:\n");
            inorder(root);
            break;
            case 3:printf("\nPreorder traversal:\n");
            preorder(root);
            break;
            case 4:printf("\nPostorder traversal:\n");
            postorder(root);
            break;
            case 5:display(root);
            break;
            case 6:break;
        }
    }while(choice!=6);
}
